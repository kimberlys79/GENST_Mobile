<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".view.ui.authentication.LoginActivity">

    <ImageView
        android:id="@+id/iv_logo_vale"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/logo_vale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_masuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:textStyle="bold"
        android:textColor="#007F7B"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_vale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_badgeNumber"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="Badge Number"
        android:background="@drawable/rectangle_button"
        android:drawableStart="@drawable/ic_badge_number"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_masuk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rectangle_button"
        android:drawableStart="@drawable/ic_email"
        android:hint="Email"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_badgeNumber"/>

    <EditText
        android:id="@+id/et_kataSandi"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rectangle_button"
        android:drawableStart="@drawable/ic_password"
        android:hint="Kata Sandi"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_email"/>

    <TextView
        android:id="@+id/tv_lupaKataSandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa kata sandi?"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/et_kataSandi"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_masuk_dgnEmail"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:text="Masuk"
        android:textColor="#FFFFFF"
        android:backgroundTint="#007F7B"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="8dp"
        android:enabled="true"
        app:layout_constraintTop_toBottomOf="@id/et_kataSandi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>