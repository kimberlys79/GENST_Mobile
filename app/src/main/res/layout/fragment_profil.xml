<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".view.ui.profil.ProfilFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbar"
        android:padding="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/icon_inspeksiGenset"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/inspect_logo"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar" />

    <ImageView
        android:id="@+id/foto_profil"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/circle_button"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


    <ImageView
        android:id="@+id/iconEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.705"
        app:layout_constraintStart_toEndOf="@id/foto_profil"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/tv_nama_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nama Pengguna"
        android:textColor="#007F7B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto_profil" />

    <TextView
        android:id="@+id/tv_badgeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Badge Number"
        android:textColor="#007F7B"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_user"/>

    <TextView
        android:id="@+id/tv_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="email@example.com"
        android:textColor="#007F7B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_badgeNumber" />

    <ImageView
        android:id="@+id/iv_iconPengaturan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingStart="25dp"
        android:background="@drawable/button_profile_menu"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="40dp"
        android:src="@drawable/ic_pengaturan"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_email"/>

    <TextView
        android:id="@+id/tv_pengaturan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="37dp"
        android:drawablePadding="5dp"
        android:textColor="#007F7B"
        android:text="Pengaturan"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_iconPengaturan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_email"/>

    <ImageView
        android:id="@+id/iv_bahasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_profile_menu"
        android:padding="1dp"
        android:paddingStart="25dp"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="40dp"
        android:src="@drawable/ic_bahasa"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_iconPengaturan" />

    <TextView
        android:id="@+id/tv_bahasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="30dp"
        android:drawablePadding="5dp"
        android:text="Bahasa"
        android:textColor="#007F7B"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pengaturan"/>

    <ImageView
        android:id="@+id/iv_riwayat_inspeksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_profile_menu"
        android:padding="1dp"
        android:paddingStart="25dp"
        android:scaleType="fitStart"
        android:src="@drawable/ic_riwayat"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="40dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_bahasa" />

    <TextView
        android:id="@+id/tv_riwayat_inspeksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="32dp"
        android:drawablePadding="5dp"
        android:textColor="#007F7B"
        android:text="Riwayat Inspeksi"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/tv_bahasa"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_logOut"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Logout"
        android:backgroundTint="#F60F13"
        android:textColor="#D9D9D9"
        android:textStyle="bold"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@id/iv_riwayat_inspeksi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

