<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".view.ui.authentication.SignUpActivity">

    <ImageView
        android:id="@+id/iv_logo_vale"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/logo_vale"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        style="Inika"
        android:textColor="#007F7B"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_vale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <EditText
        android:id="@+id/et_nama"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="Nama"
        android:background="@drawable/rectangle_button"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="0dp"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_daftar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_badgeNumber"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="Badge Number"
        android:background="@drawable/rectangle_button"
        android:drawableStart="@drawable/ic_badge_number"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/et_nama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="Email"
        android:background="@drawable/rectangle_button"
        android:drawableStart="@drawable/ic_email"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/et_badgeNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:background="@drawable/rectangle_button"
        android:drawableStart="@drawable/ic_password"
        android:hint="Kata Sandi"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />

    <Button
        android:id="@+id/btn_daftar_dgnEmail"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:text="Daftar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#007F7B"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="8dp"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>