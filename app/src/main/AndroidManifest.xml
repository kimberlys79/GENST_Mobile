<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GENST"
        tools:targetApi="31">
        <activity
            android:name=".view.ui.laporaninspeksi.LaporanActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.authentication.SignUpActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.ui.startpage.startPage"
            android:exported="false"/>
        <activity
            android:name=".view.ui.authentication.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.ui.inspeksipage.InspeksiActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".view.ui.notification.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ui.inspeksipage.SignatureActivity" />
    </application>

</manifest>